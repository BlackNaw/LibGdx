//        Gdx.input.getAccelerometerY()
//        Gdx.input.getAccelerometerZ()
//
//        Gdx.input.getRotation()
//        Gdx.input.getRotationMatrix(float[] matrix)

    //Compass

//Gdx.input.getAzimuth()
//        Gdx.input.getPitch()
//        Gdx.input.getRoll()

    //Vibrator
//
//Gdx.input.cancelVibrate()
