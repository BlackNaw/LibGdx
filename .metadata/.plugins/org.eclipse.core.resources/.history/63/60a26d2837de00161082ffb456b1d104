package com.mygdx.game;

import java.util.Random;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.Texture;

public class Alimento extends Elemento implements Cambiable {

	public Alimento(Texture imagen) {
		super(null, imagen);

		// Peligroso
		posicion = colocar(Gdx.graphics.getWidth(), Gdx.graphics.getHeight());
	}

	@Override
	public void cambiar() {
		// TODO Auto-generated method stub

	}

	public Posicion colocar(int ancho, int alto) {
		return new Posicion(sorteo(ancho), sorteo(alto));
	}

	public int sorteo(int max) {
		return new Random().nextInt(max);
	}
}